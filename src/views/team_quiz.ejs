             function calculateResult() {
        const form = document.getElementById('superpowerQuiz');
        console.log("Function called");
        let answers = {
            A: 0,
            B: 0,
            C: 0,
            D: 0
        };
    
        
        for (let i = 1; i <= 5; i++) {
            console.log("Checking question", i);
            const question = document.querySelector(`input[name="question${i}"]:checked`);

            if (question) {
                const selectedValue = question.value;
                console.log("Selected value for question " + i + ": " + selectedValue);
                answers[selectedValue]++;
            }
        }
    
        // Find the key (A, B, C, or D) with the highest count
        let maxKey = '';
        let maxCount = 0;
        for (let key in answers) {
            if (answers[key] > maxCount) {
                maxCount = answers[key];
                maxKey = key;
            }
        }
    
        // Display the result based on the key with the highest count
        let resultText = '';
        switch(maxKey) {
            case 'A':
                resultText = 'You belong to the X-Men, dedicated to promoting mutant rights and coexistence with humans';
                break;
            case 'B':
                resultText = 'You are an Avenger, ready to defend the world from formidable threats alongside other powerful heroes.';
                break;
            case 'C':
                resultText = 'You are a member of X-Force, known for taking on dangerous and covert missions, often by any means necessary.';
                break;
            case 'D':
                resultText = 'Your superpower is Invisibility or Shadow Manipulation!';
                break;
            default:
                resultText = 'You are part of the Fantastic Four, a family of explorers and heroes who use their unique powers to protect the Earth and explore the unknown.';
        }
        console.log(resultText);
        document.getElementById('result').innerText = resultText;
    
        document.getElementById('result').scrollIntoView({ behavior: 'smooth' });
    }
