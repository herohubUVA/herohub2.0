<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Story of the Day</title>

    <!-- Accesses CSS files-->
    <link rel="stylesheet" href="/assets/css/navbar.css">
    <link rel="stylesheet" href="/assets/css/characterEncyclopedia.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.1/css/all.min.css">
</head>

<body>
    <main>
        <div class="big-wrapper light">

            <!-- Accesses navigation bar -->
            <header>
                <div class="container">
                    <%- include('partials/navbar') %>
                </div>
            </header>

            <div class="content-wrapper">
                <div class="search-container">
                    <!-- All of the search elements (input, button, results) go here -->
                    <div class="container">
                      <div class="input-container">
                          <input type="text" class="input" value="iron man" id="input-box" />
                          <button class="button" id="submit-button">Submit</button>
                      </div>
                      <div class="list"></div>
                      <div class="display-container" id="show-container"></div>
            </div>

            </div>


            <div class="comment-thread-container">
                <h2>Comments</h2>
                    <!-- Comment Input -->
                    <div class="comment-input">
                        <textarea id="comment-text" placeholder="Write a comment..."></textarea>
                        <button id="post-comment-button">Post Comment</button>
                    </div>
                
                    <!-- Comments Display -->
                    <div class="comment-list">
                        <!-- Comments will be dynamically added here using JavaScript -->
                    </div>
                </div>
            </div>
           

            <!-- Music Play/Pause Control and Volume Bar -->
            <div class="audio-controls">
                <img src="/assets/images/play.png" alt="Play Music Button" class="play-button" />
                <div class="volume-control">
                  <div class="volume-bar" data-level="0"></div>
                  <div class="volume-bar" data-level="1"></div>
                  <div class="volume-bar" data-level="2"></div>
                  <div class="volume-bar" data-level="3"></div>
                  <div class="volume-bar" data-level="4"></div>
                  <div class="volume-bar" data-level="5"></div>
                  <div class="volume-bar" data-level="6"></div>
                  <div class="volume-bar" data-level="7"></div>
                  <div class="volume-bar" data-level="8"></div>
                  <div class="volume-bar" data-level="9"></div>
                </div>
            </div>
            <audio id="storyPageSong" loop>
                <source src="/assets/audio/marvelOpening.mp3" type="audio/mp3" />
            </audio>

            <!-- Theme Change Button -->
            <div class="bottom-area">
                <div class="container">
                    <button class="toggle-btn">
                        <i class="far fa-moon"></i>
                        <i class="far fa-sun"></i>
                    </button>
                </div>
            </div>

        </div>
    </main>

    <!-- Access Javascript Code -->
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <script src="/assets/js/themeToggler.js"></script>
    <script src="/assets/js/audioControls.js"></script>
    <script src="/assets/js/characterApiData.js"></script>
    <script src="/assets/js/characterEncyclopedia.js"></script>
    <% if (user) { %>
        <script>
            var loggedInUserId = "<%= user.id %>";
        </script>
    <% } %>
    
    
      
</body>

</html>
